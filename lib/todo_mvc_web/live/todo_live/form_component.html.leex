<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "todo-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <input id="new-todo" name="todo[name]" type="text" placeholder="What needs to be done?">
  <%= error_tag f, :name %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
